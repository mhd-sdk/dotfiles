# Config bash custom - editable sans rebuild NixOS
# Fichier source par home-manager via initExtra

# Environment
export EDITOR="nvim"
export VISUAL="nvim"

# Dircolors
eval "$(dircolors -b ~/.dircolors)"

# Zoxide (smart cd)
eval "$(zoxide init bash)"

# Secrets (API keys, tokens, etc.)
if [ -f "$HOME/.bashrc.secrets" ]; then
  source "$HOME/.bashrc.secrets"
fi

# Aliases
alias install-dots="sh $HOME/dev/dotfiles/install.sh"
alias nixswitch="sudo cp -r $HOME/dev/dotfiles/* /etc/nixos/ && sudo nixos-rebuild switch --flake '/etc/nixos#nixos' --show-trace"
alias clearTofi="rm -rf $HOME/.cache/tofi-drun"
alias logs-home-manager="journalctl -xe --unit home-manager-mhd"
